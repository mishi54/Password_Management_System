<%- include('header') %>
  <style>
    .form-container {
      max-width: 600px;
      margin: 50px auto;
      padding: 20px;
      border: 1px solid #ddd;
      border-radius: 10px;
      background-color: #f9f9f9;
    }
  </style>
  <div class="container">
    <div class="form-container">
      <h2 class="text-center mb-4">Add New Password</h2>
  <form action="/addnewpassword" id="passwordform" class="form-horizontal" method="post" role="form">

    <div class="form-group">
      <label for="passwordCategory">Choose Password Category</label>
      <select class="form-control" id="passwordCategory" name="passwordCategory" required>
        <% if (records.length > 0) { %>
          <% records.forEach(function(row) { %>
            <option value="<%= row.addpasscateg %>"><%= row.addpasscateg %></option>
          <% }) %>
        <% } %>
      </select>
    </div>
    <div class="form-group">
      <label for="passName">Project Name</label>
      <input type="text" id="passName" name="passName" placeholder="Enter your project name"></div>
    <div class="form-group">
      <label for="passDetail">Password Detail</label>
      <textarea class="form-control" id="passDetail" name="passDetail" rows="4" placeholder="Enter password details here..." required></textarea>
    </div>

    <button type="submit" class="btn btn-primary btn-block">Submit</button>
  </form>
</body>
</html>

      <div class="card-footer text-center">
        <small><a href="/viewallpassword">View all password List</a></small>
      </div>
    </div>
  </div>

